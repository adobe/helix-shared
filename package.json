  "description": "Shared modules of the Helix Project",
  "main": "src/index.js",
  "scripts": {
    "docs": "npx jsonschema2md -d src/schemas -o docs",
    "test": "nyc --reporter=text --reporter=lcov --check-coverage --branches 97 --statements 97 --lines 97 mocha",
