{
  "name": "@adobe/helix-shared",
  "version": "7.3.2",
  "description": "Shared modules of the Helix Project",
  "main": "src/index.js",
  "scripts": {
    "semantic-release": "semantic-release",
    "commit": "git-cz",
    "docs": "npx jsonschema2md -d src/schemas -o docs -x docs -f yaml &&  npx jsdoc2md -c .jsdoc.json --files src/*.js > docs/API.md",
    "test": "nyc --reporter=text --reporter=lcov --check-coverage --branches 95 --statements 98 --lines 99 mocha",
    "lint": "./node_modules/.bin/eslint .",
    "junit": "mocha --exit -R mocha-junit-reporter"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-shared.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-shared/issues"
  },
  "homepage": "https://github.com/adobe/helix-shared#readme",
  "dependencies": {
    "@adobe/helix-fetch": "^1.6.1",
    "@adobe/helix-log": "^4.5.1",
    "ajv": "^6.12.2",
    "ferrum": "^1.4.1",
    "fs-extra": "^9.0.0",
    "object-hash": "^2.0.3",
    "quick-lru": "^5.1.0",
    "uri-js": "^4.2.2",
    "yaml": "1.10.0"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "1.1.0",
    "@adobe/helix-testutils": "0.3.1",
    "@adobe/jsonschema2md": "4.1.2",
    "@pollyjs/adapter-node-http": "^4.3.0",
    "@pollyjs/core": "^4.3.0",
    "@pollyjs/persister-fs": "^4.3.0",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "codecov": "3.7.0",
    "commitizen": "4.1.2",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "7.1.0",
    "eslint-plugin-header": "3.0.0",
    "eslint-plugin-import": "2.20.2",
    "ghooks": "2.0.4",
    "istanbul": "1.1.0-alpha.1",
    "js-yaml": "3.14.0",
    "jsdoc-to-markdown": "5.0.3",
    "jsdom": "16.2.2",
    "junit-report-builder": "2.0.0",
    "lint-staged": "10.2.6",
    "mocha": "7.2.0",
    "mocha-junit-reporter": "1.23.3",
    "mocha-parallel-tests": "2.3.0",
    "nock": "12.0.3",
    "nyc": "15.0.1",
    "request-promise-native": "1.0.8",
    "semantic-release": "17.0.8"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
