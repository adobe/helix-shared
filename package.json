  "dependencies": {
    "ajv": "6.6.2",
    "fs-extra": "^7.0.0",
    "object-hash": "^1.3.1",
    "shelljs": "^0.8.2",
    "triple-beam": "^1.3.0",
    "uri-js": "^4.2.2",
    "uuid": "^3.3.2",
    "winston": "^3.1.0",
    "yaml": "^1.2.1"
  },
  "devDependencies": {
    "@adobe/jsonschema2md": "^1.1.1-SNAPSHOT.236",
