{
  "name": "@adobe/helix-shared",
  "version": "7.21.4",
  "description": "Shared modules of the Helix Project",
  "main": "src/index.js",
  "scripts": {
    "semantic-release": "semantic-release",
    "commit": "git-cz",
    "docs": "npx jsonschema2md -d src/schemas -o docs -x docs -f yaml &&  npx jsdoc2md -c .jsdoc.json --files src/*.js > docs/API.md",
    "test": "nyc --reporter=text --reporter=lcov --check-coverage --branches 95 --statements 98 --lines 98 mocha",
    "lint": "./node_modules/.bin/eslint .",
    "junit": "mocha --exit -R mocha-junit-reporter"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-shared.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-shared/issues"
  },
  "homepage": "https://github.com/adobe/helix-shared#readme",
  "dependencies": {
    "@adobe/helix-fetch": "2.1.7",
    "@adobe/helix-log": "5.0.0",
    "ajv": "7.2.1",
    "ajv-formats": "1.5.1",
    "ferrum": "1.8.0",
    "fs-extra": "9.1.0",
    "lru-cache": "6.0.0",
    "object-hash": "2.1.1",
    "uri-js": "4.4.1",
    "yaml": "1.10.2"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "1.1.4",
    "@adobe/helix-testutils": "0.4.3",
    "@adobe/jsonschema2md": "5.0.5",
    "@pollyjs/adapter-node-http": "5.1.0",
    "@pollyjs/core": "5.1.0",
    "@pollyjs/persister-fs": "5.0.0",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "codecov": "3.8.1",
    "commitizen": "4.2.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.22.0",
    "eslint-plugin-header": "3.1.1",
    "eslint-plugin-import": "2.22.1",
    "ghooks": "2.0.4",
    "istanbul": "1.1.0-alpha.1",
    "js-yaml": "4.0.0",
    "jsdoc-to-markdown": "7.0.0",
    "jsdom": "16.5.1",
    "junit-report-builder": "3.0.0",
    "lint-staged": "10.5.4",
    "mocha": "8.3.2",
    "mocha-junit-reporter": "2.0.0",
    "nock": "13.0.11",
    "nyc": "15.1.0",
    "semantic-release": "17.4.2"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
