{
  "name": "@adobe/helix-shared",
  "version": "6.0.2",
  "description": "Shared modules of the Helix Project",
  "main": "src/index.js",
  "scripts": {
    "semantic-release": "semantic-release",
    "commit": "git-cz",
    "docs": "npx jsonschema2md -d src/schemas -o docs -x docs &&  npx jsdoc2md -c .jsdoc.json --files src/*.js > docs/API.md",
    "test": "nyc --reporter=text --reporter=lcov --check-coverage --branches 95 --statements 98 --lines 99 mocha",
    "lint": "./node_modules/.bin/eslint .",
    "junit": "mocha --exit -R mocha-junit-reporter"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-shared"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-shared/issues"
  },
  "homepage": "https://github.com/adobe/helix-shared#readme",
  "dependencies": {
    "@adobe/helix-log": "^4.4.1",
    "ajv": "^6.10.2",
    "ferrum": "^1.4.1",
    "fs-extra": "^8.1.0",
    "lodash": "^4.17.15",
    "object-hash": "^2.0.0",
    "uri-js": "^4.2.2",
    "uuid": "^7.0.0",
    "yaml": "1.8.0"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "1.1.0",
    "@adobe/jsonschema2md": "4.0.13",
    "@adobe/helix-testutils": "0.3.0",
    "@semantic-release/changelog": "5.0.0",
    "@semantic-release/git": "9.0.0",
    "codecov": "3.6.5",
    "commitizen": "4.0.3",
    "cz-conventional-changelog": "3.1.0",
    "eslint": "6.8.0",
    "eslint-plugin-header": "3.0.0",
    "eslint-plugin-import": "2.20.1",
    "ghooks": "2.0.4",
    "istanbul": "1.1.0-alpha.1",
    "js-yaml": "3.13.1",
    "jsdoc-to-markdown": "5.0.3",
    "jsdom": "16.2.0",
    "junit-report-builder": "1.3.3",
    "lint-staged": "10.0.8",
    "mocha": "7.1.0",
    "mocha-junit-reporter": "1.23.3",
    "mocha-parallel-tests": "2.3.0",
    "nock": "12.0.2",
    "nyc": "15.0.0",
    "request-promise-native": "1.0.8",
    "semantic-release": "17.0.4"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
