{
  "name": "@adobe/helix-shared",
  "version": "2.1.1",
  "description": "Shared modules of the Helix Project",
  "main": "src/index.js",
  "scripts": {
    "semantic-release": "semantic-release",
    "docs": "npx jsonschema2md -d src/schemas -o docs &&  npx jsdoc2md -c .jsdoc.json --files src/*.js > docs/API.md",
    "test": "nyc --reporter=text --reporter=lcov --check-coverage --branches 95 --statements 98 --lines 99 mocha",
    "lint": "./node_modules/.bin/eslint .",
    "junit": "mocha --exit -R mocha-junit-reporter",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-shared"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-shared/issues"
  },
  "homepage": "https://github.com/adobe/helix-shared#readme",
  "dependencies": {
    "ajv": "^6.10.2",
    "ferrum": "^1.1.1",
    "fs-extra": "^8.1.0",
    "lodash": "^4.17.14",
    "object-hash": "^1.3.1",
    "snyk": "^1.193.2",
    "triple-beam": "^1.3.0",
    "uri-js": "^4.2.2",
    "uuid": "^3.3.2",
    "winston": "^3.2.1",
    "yaml": "1.6.0"
  },
  "devDependencies": {
    "@adobe/jsonschema2md": "^3.0.0",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/git": "^7.0.16",
    "@semantic-release/github": "^5.4.2",
    "codecov": "^3.5.0",
    "eslint": "^6.0.1",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.2",
    "ghooks": "^2.0.4",
    "istanbul": "^1.1.0-alpha.1",
    "js-yaml": "^3.13.0",
    "jsdoc-to-markdown": "^5.0.0",
    "jsdom": "15.1.1",
    "junit-report-builder": "^1.3.2",
    "lint-staged": "^9.2.0",
    "mocha": "^6.1.4",
    "mocha-junit-reporter": "^1.23.0",
    "mocha-parallel-tests": "^2.2.1",
    "nock": "^10.0.6",
    "nyc": "^14.1.1",
    "request-promise-native": "^1.0.7",
    "semantic-release": "^15.13.18"
  },
  "snyk": true,
  "lint-staged": {
    "*.js": "eslint"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
