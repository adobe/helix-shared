    "$id": "https://ns.adobe.com/helix/shared/origin",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Origin",
    "type": "object",
    "meta:status": "stabilizing",
    "description": "Representation of a origin host",
    "additionalProperties": false,
    "properties": {
        "hostname": {
            "type": "string",
            "description": ""
        },
        "port": {
            "type": "integer",
            "description": ""
        },
        "error_threshold": {
            "type": "integer",
            "description": ""
        },
        "first_byte_timeout": {
            "type": "integer",
            "description": ""
        },
        "weight": {
            "type": "integer",
            "description": ""
        },
        "address": {
            "type": "string",
            "description": ""
        },
        "connect_timeout": {
            "type": "string",
            "description": ""
        },
        "name": {
            "type": "string",
            "description": ""
        },
        "between_bytes_timeout": {
            "type": "integer",
            "description": ""
        },
        "shield": {
            "type": "string",
            "description": ""
        },
        "ssl_cert_hostname": {
            "type": "string",
            "description": ""
        },
        "max_conn": {
            "type": "integer",
            "description": ""
        },
        "use_ssl": {
            "type": "boolean",
            "description": ""
        }
    },
    "oneOf": [
        {
            "required": [
                "hostname"
            ]
        },
        {
            "required": [
                "address"
            ]
        }
    ]
}